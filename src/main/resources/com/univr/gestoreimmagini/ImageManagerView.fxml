<VBox alignment="CENTER" prefHeight="730.0" prefWidth="1020.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.univr.gestoreimmagini.ImageManagerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="679.0" prefWidth="980.0">
      <children>
         <ScrollPane focusTraversable="false" prefHeight="679.0" prefWidth="570.0">
            <content>
               <FlowPane fx:id="imageGrid" focusTraversable="true" prefHeight="671.0" prefWidth="548.0" />
            </content>
         </ScrollPane>
         <TextField fx:id="tagTextField" layoutX="606.0" layoutY="623.0" prefHeight="26.0" prefWidth="275.0" promptText="Aggiungi un tag" />
       <AnchorPane layoutX="606.0" layoutY="11.0" minHeight="0.0" minWidth="0.0" prefHeight="299.0" prefWidth="346.0">
            <children>
               <VBox alignment="CENTER" layoutX="40.0" layoutY="33.0" prefHeight="254.0" prefWidth="264.0">
                  <children>
                     <StackPane fx:id="imageDnD" onDragDropped="#placeImage" onDragOver="#acceptImage" prefHeight="202.0" prefWidth="265.0">
                        <children>
                           <ImageView fx:id="placedImage" fitHeight="190.0" fitWidth="251.0" pickOnBounds="true" preserveRatio="true" />
                        </children>
                     </StackPane>
                     <HBox alignment="CENTER" prefHeight="27.0" prefWidth="264.0">
                        <children>
                           <TextField fx:id="immagineTextField" prefHeight="25.0" prefWidth="169.0" promptText="Inserisci nome immagineAnnotata">
                              <HBox.margin>
                                 <Insets right="10.0" />
                              </HBox.margin>
                           </TextField>
                           <Button mnemonicParsing="false" onAction="#addImage" prefHeight="24.0" prefWidth="83.0" text="Aggiungi" textAlignment="CENTER">
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin>
                              <padding>
                                 <Insets bottom="5.0" />
                              </padding>
                           </Button>
                        </children>
                        <VBox.margin>
                           <Insets top="10.0" />
                        </VBox.margin>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </AnchorPane>
         <Button layoutX="891.0" layoutY="623.0" mnemonicParsing="false" onAction="#addTag" prefHeight="26.0" prefWidth="82.0" text="Aggiungi" textAlignment="CENTER" />
         <ListView fx:id="tagsList" layoutX="606.0" layoutY="330.0" prefHeight="284.0" prefWidth="367.0" />
      </children>
   </AnchorPane>
</VBox>
