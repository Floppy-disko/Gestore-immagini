<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" fillWidth="false" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.univr.gestoreimmagini.ImageManagerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="679.0" prefWidth="980.0">
      <children>
         <ScrollPane fitToWidth="true" focusTraversable="false" prefHeight="679.0" prefWidth="810.0">
            <content>
               <FlowPane fx:id="imageGrid" alignment="CENTER" focusTraversable="true" prefHeight="671.0" prefWidth="801.0" />
            </content>
         </ScrollPane>
         <StackPane fx:id="imageDnD" layoutX="896.0" layoutY="29.0" onDragDropped="#placeImage" onDragOver="#acceptImage" prefHeight="230.0" prefWidth="261.0">
            <children>
               <ImageView fx:id="placedImage" fitHeight="224.0" fitWidth="265.0" pickOnBounds="true" preserveRatio="true">
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
               </ImageView>
            </children>
         </StackPane>
         <ListView fx:id="tagsList" layoutX="847.0" layoutY="345.0" prefHeight="284.0" prefWidth="367.0">
            <cursor>
               <Cursor fx:constant="DEFAULT" />
            </cursor>
         </ListView>
         <HBox alignment="CENTER" layoutX="843.0" layoutY="266.0" prefHeight="32.0" prefWidth="367.0">
            <children>
               <TextField fx:id="immagineTextField" prefHeight="26.0" prefWidth="275.0" promptText="Inserisci nome immagineAnnotata">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </TextField>
               <Button mnemonicParsing="false" onAction="#addImage" prefHeight="26.0" prefWidth="82.0" text="Aggiungi" textAlignment="CENTER">
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" layoutX="847.0" layoutY="636.0" prefHeight="32.0" prefWidth="367.0">
            <children>
               <TextField fx:id="tagTextField" prefHeight="26.0" prefWidth="284.0" promptText="Aggiungi un tag">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor>
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </TextField>
               <Button mnemonicParsing="false" onAction="#addTag" prefHeight="26.0" prefWidth="82.0" text="Aggiungi" textAlignment="CENTER">
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Button>
            </children>
         </HBox>
      </children>
   </AnchorPane>
</VBox>
