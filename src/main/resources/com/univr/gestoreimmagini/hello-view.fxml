<VBox alignment="CENTER" prefHeight="730.0" prefWidth="1020.0" spacing="20.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.univr.gestoreimmagini.HelloController">
