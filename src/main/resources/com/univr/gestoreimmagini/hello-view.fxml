        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="375.0" prefWidth="980.0">
      <children>
         <SplitPane dividerPositions="0.5" prefHeight="294.0" prefWidth="980.0">
           <items>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="78.0" prefWidth="486.0">
                  <children>
                     <TextField fx:id="tagTextField" layoutX="35.0" layoutY="61.0" prefHeight="24.0" prefWidth="368.0" />
                     <Button fx:id="aggiungiTag" layoutX="407.0" layoutY="61.0" mnemonicParsing="false" onAction="#addTag" text="Aggiungi" />
                     <Button fx:id="eliminaTag" layoutX="35.0" layoutY="104.0" mnemonicParsing="false" onAction="#removeTag" text="Elimina" />
                  </children>
               </AnchorPane>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="138.0" prefWidth="376.0">
                  <children>
                     <ListView fx:id="tagsList" layoutX="92.0" layoutY="27.0" prefHeight="238.0" prefWidth="264.0" />
                  </children>
               </AnchorPane>
           </items>
         </SplitPane>
         <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="59.0" prefWidth="385.0" text="Aggiungi Tag" textAlignment="CENTER">
            <font>
               <Font size="30.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
</VBox>
